{
  "$id": "cloudfront-deploy-v0.4.1",
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "ContainerSitePath": {
      "type": "string",
      "description": "Path inside container where built site files are located",
      "default": "/app/site"
    },
    "DockerContext": {
      "type": "string",
      "description": "Docker build context",
      "default": "."
    },
    "DockerfilePath": {
      "type": "string",
      "description": "Path to Dockerfile",
      "default": "Dockerfile"
    },
    "Environment": {
      "type": "string",
      "description": "Environment"
    },
    "LocalSitePath": {
      "type": "string",
      "description": "Local path to extract site files to",
      "default": "./site"
    },
    "Name": {
      "type": "string",
      "description": "Application/service name"
    }
  }
}
